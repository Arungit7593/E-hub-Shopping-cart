<section>
    <div class="container mt-5">
        <div class="col-md-6">
            <h1 class="text-centre">Edit-Product</h1><br>

            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                <label for="">Name</label><br> 
                <input type="text" name="Name" class="form-action" value="{{product.Name}}"><br>

                <label for="">Category</label><br>
                <input type="text" name="Category" class="form-action" value="{{product.Category}}"><br>

                <label for="">Price</label><br>
                <input type="text" name="Price" class="form-action" value="{{product.Price}}"><br>

                <label for="">Description</label><br>
                <input type="text" name="Description" class="form-action" value="{{product.Description}}"><br>

                <label for="">Image</label><br>
                <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height:auto" id="imgView"><br><br>
                <input type="file" name="Image"  class="form-action" onchange="viewImage(event)"><br>

                <button type="submit" class="btn btn-success mt-5">Submit</button>

            </form>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
        
</script>