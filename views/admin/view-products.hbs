<section>
    <div class="container">
        <div class="row mt-4 float-end">
            <a href="/admin/add-product" class="btn btn-success  mb-5">Add product</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px; hight: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete  {{this.Name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>

<script>
  $(function(){
    $('#productsTable').DataTable();
  });
</script>